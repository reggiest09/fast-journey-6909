<div class="container" style="
    margin-top: 100px; margin-bottom: 50px;">
  <div class="row">
<div id="content">
<div class="tab-content">
	<%= simple_form_for @user, :url=>{:controller=>"football_steps",:action=>"update",:id=>@user.id}, method: "put" do |f| %>
    <div class="container change-container center_div">
    <div class="tab-pane" id="tab1">
    <% if params[:plan_name] == "summer_wk"%>
      <%= render partial: "summer_weekly", locals: {plan_name: params[:plan_name],summer_plan: params[:summer_plan],f: f} %>
    <%elsif params[:plan_name] == "summer_wk1" %> 
      <%= render partial: "summer_weekly", locals: {plan_name: params[:plan_name],f: f} %>
    <%else%>
      <h3>  <%if params[:plan_name] == "noresmen_basketball" %> 
             Norsemen Basketball 2016- 2017 
            <%else%>
              Norsemen Football / Cheerleading Registration Form 
            <%end%>
      </h3>
      <div class="row">
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :first_name, placeholder: 'first name',class: "required email col-xs-5 ", required: true %>
        </div>
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :last_name, placeholder: 'last name',class: "required email", required: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-xs-5">
          <%= f.input :child_name, placeholder: 'Child Name', input_html: { multiple: true,"data-role"=>"tagsinput",required: true }, class: "required name col-xs-6 col-lg-2" %>
          <span><b>Enter comma (,) add multiple childrens</b></span>
        </div>
      </div></br>
      <div class="row">
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :home_address, required: true %>
        </div>
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :home_city, required: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :home_state, required: true, :collection => us_states, prompt: "Please Select State" %>
        </div>
        <div class="col-lg-3 col-xs-5 ">
          <%= f.input :home_zip_code, required: true %>
        </div>
      </div>
      <div class="row">
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :phone, label: 'Phone' %>
  	    </div>
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :primary_phone, label: "Primary Phone", required: true %>
  	    </div>
	    </div>
  	  <div class="row">
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :dob, label: "Date of Birth" %>
  	    </div>
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :grand_level, label: "Grade Level as of Fall 2016"%>
  	    </div>
  	  </div>
  	  <div class="row">
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :event, as: :radio_buttons, :collection => [['Friend or Colleague', 'f_c'], ['Search Engine', 'search'],['Advertisement', 'advertisement'],['Other', 'other']],class: "required", required: true %>
  	      <%= f.input :event, label: "other" %>
        </div>
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :shirt_size, as: :radio_buttons, :collection => [['Youth XS', 'f_c'], ['Youth S', 'search'],['Youth M', 'advertisement'],['Youth L', 'other'],['Adult S', 'other'],['Adult M', 'other']],class: "required", required: true %>
  	    </div>
  	  </div>
	  <div class="row">
	    <div class="col-lg-3 col-xs-5 ">
	      <%= f.input :father_name, label: "Parents Name" %>
	    </div>
	    <div class="col-lg-3 col-xs-5 ">
	      <%= f.input :school_name, label: "Father's Cell Phone Number" %>
	    </div>
	  </div>
	  <div class="row">
	    <div class="col-lg-3 col-xs-5 ">
	      <%= f.input :company, label: 'Company'%>
	    </div>
	    <div class="col-lg-3 col-xs-5 ">
        <%if params[:plan_name] == "noresmen_basketball" %> 
          <%= f.input :register_for, as: :check_boxes, collection: [['Summer Camp', 'noresmen_football']],class: "required", required: true %>
        <%else%>
	       <%= f.input :register_for, as: :check_boxes, collection: [['Football', 'football'], ['Cheerleading', 'cheerleading']],class: "required", required: true %>
        <%end%>
	    </div>
	  </div>
	  <div class="row">
	    <div class="col-lg-3 col-xs-5 ">
        <% text = params[:plan_name] == "football" ? "Please list the names and grades of brothers and/or sisters also participating in football and/or cheerleading:" : "Please list the names and grades of brothers and/or sisters also participating in Summer Camp:" %>
	      <%= f.input :other_arrangements, as: :text,label: text%>
	    </div>
      <%if params[:plan_name] == "football" %>
  	    <div class="col-lg-3 col-xs-5 ">
  	      <%= f.input :player_weight, label: "Football Player's Weight"%>
  	    </div>
      <%end%>
	  </div>
	  <div class="row">
    </div>

    <%= f.hidden_field "plan_name", :value => params[:plan_name] %>
    <%= f.hidden_field "interval", :value => params[:interval] %>
    <%end%>
    
  </div>
    <%= f.submit "Continue", class: "btn btn-primary btn-info" %>
	<% end %>
</div>
 <div class="wave2"></div>
</div>
</div>
</div>
</div>